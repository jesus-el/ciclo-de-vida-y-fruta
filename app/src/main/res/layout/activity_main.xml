<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="523dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/banana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:onClick="mostrar"
                app:srcCompat="@drawable/bananas" />

            <ImageButton
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:onClick="mostrar"
                app:srcCompat="@drawable/cerezas" />

            <ImageButton
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="mostrar"
                app:srcCompat="@drawable/frambuesas" />

            <ImageButton
                android:id="@+id/fre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:onClick="mostrar"
                app:srcCompat="@drawable/fresas" />

            <ImageButton
                android:id="@+id/lu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:onClick="mostrar"
                app:srcCompat="@drawable/kiwis" />

            <ImageButton
                android:id="@+id/mango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:onClick="mostrar"
                app:srcCompat="@drawable/mangos" />

            <ImageButton
                android:id="@+id/manza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:onClick="mostrar"
                app:srcCompat="@drawable/manzanas" />

            <ImageButton
                android:id="@+id/melon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DB690D"
                android:onClick="mostrar"
                app:srcCompat="@drawable/melon" />

            <ImageButton
                android:id="@+id/naranja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                android:onClick="mostrar"
                app:srcCompat="@drawable/naranjas" />

            <ImageButton
                android:id="@+id/pera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="mostrar"
                app:srcCompat="@drawable/pera" />

            <ImageButton
                android:id="@+id/piÃ±a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E5EC0B"
                android:onClick="mostrar"
                app:srcCompat="@drawable/pina" />

            <ImageButton
                android:id="@+id/patilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:onClick="mostrar"
                app:srcCompat="@drawable/sandia" />

            <ImageButton
                android:id="@+id/uva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:onClick="mostrar"
                app:srcCompat="@drawable/uvas" />

            <ImageButton
                android:id="@+id/mora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:onClick="mostrar"
                app:srcCompat="@drawable/zarzamora" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>